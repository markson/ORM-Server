.col-md-8
  %table.table.table-hover{:'data-resource' => "customer"}
    %thead
      %tr
        %th Agent
        %th Booking At
        %th Customers
        %th Activities
    %tbody
      -@trips.each do |trip|
        %tr.marker-row{:'data-id' => trip.id}
          %td= trip.agents.first.name
          %td= trip.booked_at
          %td 张王赵李
          %td
            .fix-width
              %ul
                - trip.activities.each do |activity|
                  %li{:'data-lat' => activity.latitude, :'data-lng' => activity.longitude}= activity.name
.col-md-4
  = haml :_map
